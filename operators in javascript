/* This code gives the concept of opetators in Javascript*/

			var linebreak = "<br />"; // making a variable for line break as <br/> is used to break the line in HTML. 

			// Arithmetic Operators

			document.write("Arithmetic Operators in Javascript");
			document.write(linebreak);
			document.write(linebreak);




            var a = 20;// number 
            var b = 15;
            

            document.write(" variable a is ",a);
            document.write(linebreak);
            document.write(linebreak);
            document.write(" variable b is ",b);
            document.write(linebreak);
            document.write(linebreak);
            
           	document.write("Addition Operator");
		   	document.write(linebreak);
		   	document.write(linebreak);

            document.write("a + b = ");
            result = a + b;
            document.write(result); // printing addition  
            document.write(linebreak); // using the linebreak variable for breaking the line.
            document.write(linebreak);
         
         	document.write("Subtration Operator");
		   	document.write(linebreak);
		   	document.write(linebreak);

            document.write("a - b = ");
            result = a - b; 
            document.write(result);  // printing result of subtraction.
            document.write(linebreak);
            document.write(linebreak);

            document.write("Multiplication Operator");
		   	document.write(linebreak);
		   	document.write(linebreak);

            document.write("a * b = ");
            result = a *b;
            document.write(result);     // printing result of multiplication.
            document.write(linebreak);
         	document.write(linebreak);
            document.write("Division Operator");
		   	document.write(linebreak);
		   	document.write(linebreak);

            document.write("a / b = ");
            result = a / b;
            document.write(result);    // printing result of division. 
            document.write(linebreak);
            document.write(linebreak);
         
            document.write("Modulous Operator");
		   	document.write(linebreak);
		   	document.write(linebreak);

            document.write("a % b = ");
            result = a % b;
            document.write(result);     // printing result after applying Modulus operator on a and b
            document.write(linebreak);
            document.write(linebreak);
         
            document.write("Increment Operator");
		   	document.write(linebreak);
		   	document.write(linebreak);

           
           
            document.write("++a = ");
            result = ++a;  // applying  increment operator.
            document.write(result);   // printing the result of increment operator.
            document.write(linebreak);
            document.write(linebreak);

            document.write("Decrement Operator");
		   	document.write(linebreak);
		   	document.write(linebreak);
         
            
            document.write("--b = ");
            result = --b; // applying decrement operator. 
            document.write(result); // printing the result of decrement operator.
            document.write(linebreak);
            document.write(linebreak);


  //Comparison Operators

     		document.write("Comparison Operators in Javascript");
			document.write(linebreak);
			document.write(linebreak);



			var a = 50;
            var b = 55;
            

            document.write(" variable a is ",a);
            document.write(linebreak);
            document.write(linebreak);
            document.write(" variable b is ",b);
            document.write(linebreak);
            document.write(linebreak);
            
      		document.write(linebreak);
      		document.write(linebreak);
			
			document.write("1. = = (Equal) Operator");
			document.write(linebreak);
			document.write(linebreak);

            document.write( a,"= =",b,"=> ");
            result = (a == b);
            document.write(result);
           
           
            document.write(linebreak);
            document.write(linebreak);
            document.write(linebreak);
            document.write("2. != (Not Equal) Operator");
        	document.write(linebreak);
      

            document.write( a," !=",b,"=> ");
            result = (a != b);
            document.write(result);
            document.write(linebreak);
      		document.write(linebreak);
        	document.write("  3. < (Less than) Operator");
        	document.write(linebreak);

      		document.write( a," <",b,"=> ");
         	
            
            result = (a < b);
            document.write(result);
            document.write(linebreak);
            document.write(linebreak);

         	document.write("  4. > (Greater than) Operator");
         	document.write(linebreak);

           document.write( a," >",b,"=> ");
            result = (a > b);
            document.write(result);
            document.write(linebreak);
            document.write(linebreak);
         

         	

         	
            document.write(linebreak);
         
         	document.write("  5. >= (Greater than or Equal to) Operator");
         	document.write(linebreak);

           document.write( a," >=",b,"=> ");
            result = (a >= b);
            document.write(result);
            document.write(linebreak);
            document.write(linebreak);
         	
         	document.write("  6.  <= (Less than or Equal to) Operator");
         	document.write(linebreak);
           	document.write( a," <=",b,"=> ");
            result = (a <= b);
            document.write(result);
            document.write(linebreak);
            document.write(linebreak);

           // Logical Operators

           	document.write("Logical Operators in Javascript");
			document.write(linebreak);
			document.write(linebreak);


			var a = true;
            var b = false;

            document.write(" variable a is ",a);
            document.write(linebreak);
            document.write(linebreak);
            document.write(" variable b is ",b);
            document.write(linebreak);
            document.write(linebreak);
            
      		document.write(" && (Logical AND) Operator");
            document.write(linebreak);
            document.write(linebreak);
            document.write(linebreak);


            document.write(a," &&", b," => ");
            result = (a && b);
            document.write(result);
            document.write(linebreak);
             document.write(linebreak);
            document.write(linebreak);

            document.write(" || (Logical OR) Operator");
            document.write(linebreak);
             document.write(linebreak);
            document.write(linebreak);
         
            document.write(a," ||", b," => ");
            result = (a || b);
            document.write(result);
            document.write(linebreak);
             document.write(linebreak);
            document.write(linebreak);

            document.write(" ! (Logical NOT) Operator");
            document.write(linebreak);
            document.write(linebreak);
            document.write(linebreak);
         
            document.write("!",a," => ");
            result = (!a);
            document.write(result);
            document.write(linebreak);

          // Bitwise Operators

          	document.write("Bitwise Operators in Javascript");
			document.write(linebreak);
			document.write(linebreak);


			var a = 4; // Bit representation 100
            var b = 5; // Bit representation 101

            document.write(" variable a is ",a);
            document.write(linebreak);
            document.write(linebreak);
            document.write(" variable b is ",b);
            document.write(linebreak);
            document.write(linebreak);
            
         	
            document.write("Bitwise  AND (&) Operator in Javascript");
			document.write(linebreak);
			document.write(linebreak);

            document.write("(a & b) => ");
            result = (a & b);
            document.write(result);
            document.write(linebreak);
            document.write(linebreak);
         

            document.write("Bitwise  OR (|) Operator in Javascript");
			document.write(linebreak);
			document.write(linebreak);

            document.write("(a | b) => ");
            result = (a | b);
            document.write(result);
            document.write(linebreak);
            document.write(linebreak);

            document.write("Bitwise  XOR (^) Operator in Javascript");
			document.write(linebreak);
			document.write(linebreak);
         
            document.write("(a ^ b) => ");
            result = (a ^ b);
            document.write(result);
            document.write(linebreak);
            document.write(linebreak);

            document.write("Bitwise  NOT (~) Operator in Javascript");
			document.write(linebreak);
			document.write(linebreak);
         
            document.write("(~b) => ");
            result = (~b);
            document.write(result);
            document.write(linebreak);
            document.write(linebreak);

            document.write("Bitwise  Left Shift (<<) Operator in Javascript");
			document.write(linebreak);
			document.write(linebreak);
         
            document.write("(a << b) => ");
            result = (a << b);
            document.write(result);
            document.write(linebreak);
            document.write(linebreak);
         
            document.write("Bitwise Right Shift (>>) Operator in Javascript");
			document.write(linebreak);
			document.write(linebreak);
         

            document.write("(a >> b) => ");
            result = (a >> b);
            document.write(result);
            document.write(linebreak);
            document.write(linebreak);


            //Assignment Operators

            document.write("Assignment Operators in Javascript");
			document.write(linebreak);
			document.write(linebreak);

            var a = 33;
            var b = 10;

            document.write(" variable a is ",a);
            document.write(linebreak);
            document.write(linebreak);
            document.write(" variable b is ",b);
            document.write(linebreak);
            document.write(linebreak);
           
         	
            document.write("= (Simple Assignment )");
			document.write(linebreak);
			document.write(linebreak);

            document.write("Value of a => (a = b) => ");
            result = (a = b);
            document.write(result);
            document.write(linebreak);
            document.write(linebreak);

         
            document.write("+= (Add and Assignment)");
			document.write(linebreak);
			document.write(linebreak);


            document.write("Value of a => (a += b) => ");
            result = (a += b);
            document.write(result);
            document.write(linebreak);
         	document.write(linebreak);


         	document.write("âˆ’= (Subtract and Assignment))");
			document.write(linebreak);
			document.write(linebreak);

            document.write("Value of a => (a -= b) => ");
            result = (a -= b);
            document.write(result);
            document.write(linebreak);
            document.write(linebreak);

            document.write("*= (Multiply and Assignment))");
			document.write(linebreak);
			document.write(linebreak);

         
            document.write("Value of a => (a *= b) => ");
            result = (a *= b);
            document.write(result);
            document.write(linebreak);
            document.write(linebreak);

            document.write("/= (Divide and Assignment))");
			document.write(linebreak);
			document.write(linebreak);

         
            document.write("Value of a => (a /= b) => ");
            result = (a /= b);
            document.write(result);
            document.write(linebreak);
            document.write(linebreak);


            document.write("%= (Modules and Assignment))");
			document.write(linebreak);
			document.write(linebreak);


         
            document.write("Value of a => (a %= b) => ");
            result = (a %= b);
            document.write(result);
            document.write(linebreak);
            document.write(linebreak);

            // Miscellaneous Operator
            document.write("Miscellaneous Operators in Javascript");
			document.write(linebreak);
			document.write(linebreak);

            // Conditional Operator (? :)
			
			document.write("? : (Conditional )");
			document.write(linebreak);
			document.write(linebreak);
			document.write("If Condition is true? Then value X : Otherwise value Y");
			document.write(linebreak);
			document.write(linebreak);
			var a = 10;
            var b = 20;
            
            document.write(" variable a is ",a);
            document.write(linebreak);
            document.write(linebreak);
            document.write(" variable b is ",b);
            document.write(linebreak);
            document.write(linebreak);
           
         
            document.write ("((a > b) ? 100 : 200) => ");
            result = (a > b) ? 100 : 200;
            document.write(result);
            document.write(linebreak);
         	document.write(linebreak);
         	document.write(linebreak);

            document.write ("((a < b) ? 100 : 200) => ");
            result = (a < b) ? 100 : 200;
            document.write(result);
            document.write(linebreak);
            document.write(linebreak);
            document.write(linebreak);


            //  typeof operator

            document.write("Typeof Operator in Javascript");
			document.write(linebreak);
			document.write(linebreak);

			var a = 10;
            var b = "String";

            document.write(" variable a is ",a);
            document.write(linebreak);
            document.write(linebreak);
            document.write(" variable b is ",b);
            document.write(linebreak);
            document.write(linebreak);
           
         
            result = (typeof b == "string" ? "B is String" : "B is Numeric");
            document.write("Result => ");
            document.write(result);
            document.write(linebreak);
         
            result = (typeof a == "string" ? "A is String" : "A is Numeric");
            document.write("Result => ");
            document.write(result);
            document.write(linebreak);

